---
const { postTitle, postDesc, postUrl, postDate } = Astro.props;
---

<div class="post-container">
  <div class="post-header">
    <h3>
      <a href={postUrl}>{postTitle}</a>
    </h3>

    <span class="label">{postDate}</span>
  </div>

  <div class="post-footer">
    <p>{postDesc}</p>
    <a href={postUrl} class="label">Read</a>
  </div>
</div>

<style>
  div {
    background: GhostWhite;
    padding: 16px;
    margin-bottom: 16px;
  }

  .post-container * {
    padding: 0;
    margin: 0;
  }

  .post-container {
    box-shadow: 0px 0px 2px #888888;
  }

  .post-header h3 {
    margin-bottom: 8px;
  }

  .post-header {
    margin-bottom: 16px !important;
  }

  .post-footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end; /* Align items to the bottom */
    line-height: 2;
  }

  
</style>
